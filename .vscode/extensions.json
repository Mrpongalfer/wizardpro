{
    "recommendations": [
        // Core Development
        "ms-python.python", // Python language support, debugging, linting, etc.
        "ms-python.flake8", // Flake8 linter integration
        "ms-python.mypy-type-checker", // MyPy type checker integration
        "ms-python.black-formatter", // Black code formatter
        "eamodio.gitlens", // Enhanced Git capabilities
        "github.vscode-pull-request-github", // GitHub PR integration
