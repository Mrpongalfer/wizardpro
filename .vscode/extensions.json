        // Remote Development (Must be installed locally, good to recommend)
        "ms-vscode-remote.remote-ssh",
        "ms-vscode-remote.remote-ssh-edit",

        // Docker & Containers
        "ms-azuretools.vscode-docker", // Docker integration
        "ms-vscode-remote.remote-containers", // For Dev Containers (useful later)

        // Textual TUI Development (Optional but helpful)
        "textualize.textual-dev"

        // Add other useful extensions, e.g.:
